// three ways to print a nonprintng chatacter

#include <stdio.h>

int main(void)
{
	char beep1 = 7;				// Unicod
	printf("beep once!%c\n", beep1);

	char beep2 = '\a';			// assign escape sequence to character variable
	printf("beep twice!%c\n", beep2);

	printf("beep third!%c\n", '\a');	// print directly, not from the book

	// the third way is using a hexadecimal form of character constants.

	return 0;
}
